@page
@model USALExamManagementSystem.Web.Areas.Identity.Pages.Account.ResetPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-wrapper">
    <div class="auth-card shadow">

        <div class="text-center mb-4">
            <img src="~/images/usal-logo.png" class="auth-logo mb-3" />
            <h4 class="auth-title">Forgot Password</h4>
            <p class="text-muted small">
                Enter your university email
            </p>
        </div>

        <form method="post">

            <div asp-validation-summary="ModelOnly"
                 class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email"
                       class="form-control auth-input" />
                <span asp-validation-for="Input.Email"
                      class="text-danger"></span>
            </div>

            <button type="submit"
                    class="btn auth-btn w-100 text-white">
                Send Reset Link
            </button>

        </form>

        <div class="text-center mt-3">
            <a asp-page="./Login"
               class="text-decoration-none">
                Back to login
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
