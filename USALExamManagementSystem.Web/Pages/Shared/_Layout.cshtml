<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - USAL</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>
        <nav class="navbar navbar-dark" style="background:#0b5e2b;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">USAL</a>

                @if (User.Identity!.IsAuthenticated)
                {
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                        <button class="btn btn-outline-light btn-sm">Logout</button>
                    </form>
                }
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            @if (User.IsInRole("Admin"))
            {
                <partial name="_AdminSidebar" />
            }
            else if (User.IsInRole("Doctor"))
            {
                <partial name="_DoctorSidebar" />
            }
            else if (User.IsInRole("Student"))
            {
                <partial name="_StudentSidebar" />
            }

            <main class="col px-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
