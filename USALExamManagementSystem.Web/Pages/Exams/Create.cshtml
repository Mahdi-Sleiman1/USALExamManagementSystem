@page
@model USALExamManagementSystem.Web.Pages.Exams.CreateModel

<h2>Create Exam</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Exam.ExamTitle"></label>
        <input asp-for="Exam.ExamTitle" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Exam.ExamDate"></label>
        <input asp-for="Exam.ExamDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Exam.CourseId"></label>
        <select asp-for="Exam.CourseId" class="form-control">
            <option value="">-- Select Course --</option>
            @foreach (var course in Model.Courses)
            {
                <option value="@course.CourseId">@course.CourseName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save Exam</button>
</form>
